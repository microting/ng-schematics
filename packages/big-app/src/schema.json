{
  "$schema": "http://json-schema.org/schema",
  "id": "big-app-schematic",
  "title": "Big App Options Schema",
  "type": "object",
  "properties": {
    "modules": {
      "type": "string",
      "description": "The number of modules to add.",
      "x-prompt": "Number of modules?",
      "default": "3"
    },
    "components": {
      "type": "string",
      "description": "The number of components to add to each module.",
      "x-prompt": "Number of components per module?",
      "default": "3"
    }
  },
  "required": []
}
