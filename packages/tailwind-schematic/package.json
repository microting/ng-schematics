{
  "name": "@schuchard/tailwind-schematic",
  "version": "0.0.0",
  "description": "Add tailwind to an Angular project",
  "scripts": {
    "tsc": "tsc",
    "clean:launch": "yarn clean && yarn launch",
    "dev": "yarn build:clean:launch",
    "publish": "yarn build",
    "test:schematic": "yarn build && jasmine src/**/*_spec.js",
    "build": "bash ./scripts/build.sh",
    "clean": "git checkout HEAD -- ../../sandbox && git clean -f -d ../../sandbox",
    "build:clean:launch": "yarn build && yarn clean && yarn launch",
    "launch": "yarn link:sandbox && cd ../../sandbox/single-app && yarn && ./node_modules/.bin/ng add @schuchard/tailwind-schematic",
    "test": "yarn build:clean:launch && yarn test:sandbox && yarn clean",
    "test:unit": "yarn build:watch && jasmine src/**/*_spec.js",
    "test:sandbox": "cd ../../sandbox/single-app && yarn lint && yarn test && yarn build",
    "link:sandbox": "yarn link && cd ../../sandbox/single-app && yarn link @schuchard/tailwind-schematic",
    "release": "np"
  },
  "keywords": [
    "schematics"
  ],
  "author": "Kevin Schuchard",
  "license": "MIT",
  "schematics": "./collection.json",
  "dependencies": {
    "@schuchard/schematic-utils": "^0.1.0"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  }
}
